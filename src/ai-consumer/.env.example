OPENAI_API_KEY="add your key here"

MAX_WORKERS=50

# Redis
REDIS_HOST="redis"
REDIS_PORT=6379

# Kafka
KAFKA_BOOTSTRAP_SERVERS="kafka:29092"
CONSUME_TOPIC="incoming_messages"
PRODUCE_TOPIC="responses"

# Knowledge Base / RAG
KNOWLEDGE_BASE_PATH="/app/data/resume-data.txt"
RAG_MAX_CHUNKS=3
RAG_CONFIDENCE_THRESHOLD=0.25

# Response Caching
ENABLE_CACHING=true
CACHE_TTL_SECONDS=86400

# Cost Controls
MAX_TOKENS_PER_RESPONSE=300

# System Prompt
SYSTEM_PROMPT_TEMPLATE="You are a helpful AI assistant answering questions about a person's professional background, skills, and experience. Be concise, friendly, and professional. Keep responses under 3-4 sentences unless more detail is specifically requested."

# Logging
LOG_LEVEL="INFO"
LOG_FOLDER="/var/log/nova-prime"
APP_NAME=ai-consumer


